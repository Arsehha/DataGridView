@model DataGridView.Entities.ApplicantModel

@{
    ViewData["Title"] = "Удалить абитуриента";
}

<h2 class="text-center mb-4">Удалить абитуриента</h2>

<div class="alert alert-warning" role="alert">
    <h4>Вы уверены, что хотите удалить этого абитуриента?</h4>
    <p>Это действие нельзя отменить.</p>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h4>Информация об абитуриенте</h4>
                <hr />

                <dl class="row">
                    <dt class="col-sm-4">ФИО:</dt>
                    <dd class="col-sm-8">@Model.FullName</dd>

                    <dt class="col-sm-4">Пол:</dt>
                    <dd class="col-sm-8">@(Model.Sex == DataGridView.Entities.Enums.SexType.Male ? "Мужской" : "Женский")</dd>

                    <dt class="col-sm-4">Дата рождения:</dt>
                    <dd class="col-sm-8">@Model.DateOfBirth.ToString("dd.MM.yyyy")</dd>

                    <dt class="col-sm-4">Форма обучения:</dt>
                    <dd class="col-sm-8">
                        @(Model.EducationForm switch
                        {
                            DataGridView.Entities.Enums.EducationType.FullTime => "Очная",
                            DataGridView.Entities.Enums.EducationType.PartTime => "Заочная",
                            DataGridView.Entities.Enums.EducationType.FullTimeAndPartTime => "Очно-заочная",
                            _ => Model.EducationForm.ToString()
                        })
                    </dd>

                    <dt class="col-sm-4">Математика:</dt>
                    <dd class="col-sm-8">@Model.MathScore</dd>

                    <dt class="col-sm-4">Русский язык:</dt>
                    <dd class="col-sm-8">@Model.RussianScore</dd>

                    <dt class="col-sm-4">Информатика:</dt>
                    <dd class="col-sm-8">@Model.InformaticsScore</dd>

                    <dt class="col-sm-4">Сумма баллов:</dt>
                    <dd class="col-sm-8">@(Model.MathScore + Model.RussianScore + Model.InformaticsScore)</dd>
                </dl>

                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />

                    <div class="form-group">
                        <button type="submit" class="btn btn-danger">Удалить</button>
                        <a asp-action="Index" class="btn btn-secondary" style="margin-left: 8px;">Отмена</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
