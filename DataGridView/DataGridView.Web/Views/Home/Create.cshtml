@model DataGridView.Web.Models.ApplicantEditViewModel
@using DataGridView.Entities.Enums

@{
    ViewData["Title"] = "Добавить абитуриента";
}

<h2 class="text-center mb-4">Добавить нового абитуриента</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()

                    <div class="form-group mb-3">
                        <label asp-for="FullName" class="form-label">ФИО</label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Sex" class="form-label">Пол</label>
                        <select asp-for="Sex" asp-items="Html.GetEnumSelectList<SexType>()" class="form-control">
                            <option value="">Выберите пол</option>
                        </select>
                        <span asp-validation-for="Sex" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="DateOfBirth" class="form-label">Дата рождения</label>
                        <input asp-for="DateOfBirth"
                               class="form-control"
                               type="date"
                               value="@DateTime.Now.ToString("yyyy-MM-dd")"
                               min="@DateTime.Now.AddYears(-80).ToString("yyyy-MM-dd")"
                               max="@DateTime.Now.AddYears(-14).ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="EducationForm" class="form-label">Форма обучения</label>
                        <select asp-for="EducationForm" asp-items="Html.GetEnumSelectList<EducationType>()" class="form-control">
                            <option value="">Выберите форму</option>
                        </select>
                        <span asp-validation-for="EducationForm" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="MathScore" class="form-label">Баллы по математике</label>
                        <input asp-for="MathScore" class="form-control" type="number" min="0" max="100" />
                        <span asp-validation-for="MathScore" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="RussianScore" class="form-label">Баллы по русскому языку</label>
                        <input asp-for="RussianScore" class="form-control" type="number" min="0" max="100" />
                        <span asp-validation-for="RussianScore" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="InformaticsScore" class="form-label">Баллы по информатике</label>
                        <input asp-for="InformaticsScore" class="form-control" type="number" min="0" max="100" />
                        <span asp-validation-for="InformaticsScore" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Добавить</button>
                        <a asp-action="Index" class="btn btn-secondary" style="margin-left: 8px;">Отмена</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
